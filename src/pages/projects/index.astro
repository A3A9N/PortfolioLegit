---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import AnimatedSection from '../../components/AnimatedSection.astro';
import ProjectCard from '../../components/ProjectCard.astro';
import { projects } from '../../data/projects';
---

<BaseLayout title="Projects">
  <div class="page-shell">
    <Header />

    <main class="flex-1">
      <section class="page-container py-16">
        <div class="mb-10 space-y-4">
          <p class="section-title">Projects</p>
          <h1 class="text-3xl font-semibold tracking-tight text-white">
            Focused, gameplay-driven work.
          </h1>
          <p class="muted max-w-xl">
            A selection of prototypes and vertical slices built to study AI, combat readability and gameplay systems.
          </p>
        </div>

        <AnimatedSection as="div">
          <div class="grid gap-5 md:grid-cols-2 lg:grid-cols-3">
            {projects.map((project) => (
              <ProjectCard project={project} />
            ))}
          </div>
        </AnimatedSection>
      </section>
    </main>

    <Footer />
  </div>
</BaseLayout>


