---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import AnimatedSection from '../components/AnimatedSection.astro';
---

<BaseLayout title="Contact">
  <div class="page-shell">
    <Header />

    <main class="flex-1">
      <section class="page-container py-16">
        <AnimatedSection>
          <div class="mx-auto max-w-xl space-y-8">
            <header class="space-y-3">
              <p class="section-title">Contact</p>
              <h1 class="text-3xl font-semibold tracking-tight text-white">
                Let’s talk.
              </h1>
              <p class="muted">
                Interested in my work or looking for an intern focused on gameplay and AI? Send me a short message and I’ll get back to you.
              </p>
            </header>

            <form
              action="https://formsubmit.co/YOUR_EMAIL_HERE"
              method="POST"
              class="card space-y-4 p-6"
            >
              <input type="hidden" name="_captcha" value="false" />
              <input type="hidden" name="_template" value="table" />

              <div class="space-y-1.5">
                <label for="name" class="text-xs font-medium text-slate-200">Name</label>
                <input
                  id="name"
                  name="name"
                  type="text"
                  required
                  class="w-full rounded-xl border border-white/15 bg-black/60 px-3 py-2 text-sm text-slate-100 outline-none ring-0 placeholder:text-slate-500 focus:border-sky-400"
                  placeholder="Your name"
                />
              </div>

              <div class="space-y-1.5">
                <label for="email" class="text-xs font-medium text-slate-200">Email</label>
                <input
                  id="email"
                  name="email"
                  type="email"
                  required
                  class="w-full rounded-xl border border-white/15 bg-black/60 px-3 py-2 text-sm text-slate-100 outline-none ring-0 placeholder:text-slate-500 focus:border-sky-400"
                  placeholder="you@studio.com"
                />
              </div>

              <div class="space-y-1.5">
                <label for="message" class="text-xs font-medium text-slate-200">Message</label>
                <textarea
                  id="message"
                  name="message"
                  required
                  rows={4}
                  class="w-full rounded-xl border border-white/15 bg-black/60 px-3 py-2 text-sm text-slate-100 outline-none ring-0 placeholder:text-slate-500 focus:border-sky-400"
                  placeholder="A short note about the role, team or project."
                />
              </div>

              <button
                type="submit"
                class="mt-2 inline-flex w-full items-center justify-center rounded-full bg-white px-5 py-2.5 text-xs font-semibold uppercase tracking-[0.2em] text-slate-900 hover:bg-slate-100 transition"
              >
                Send message
              </button>
            </form>
          </div>
        </AnimatedSection>
      </section>
    </main>

    <Footer />
  </div>
</BaseLayout>


