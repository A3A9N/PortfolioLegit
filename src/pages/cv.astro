---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import AnimatedSection from '../components/AnimatedSection.astro';
---

<BaseLayout title="CV">
  <div class="page-shell">
    <Header />

    <main class="flex-1">
      <section class="page-container py-16">
        <AnimatedSection>
          <div class="mx-auto max-w-xl space-y-6 text-center">
            <p class="section-title">CV</p>
            <h1 class="text-3xl font-semibold tracking-tight text-white">
              Curriculum Vitae.
            </h1>
            <p class="muted">
              A concise overview of my education, projects and skills in one document.
            </p>

            <div class="pt-2">
              <a
                href="/cv/Adrian-Marin-CV.pdf"
                class="inline-flex items-center rounded-full bg-white px-6 py-2.5 text-xs font-semibold uppercase tracking-[0.22em] text-slate-900 shadow-[0_14px_40px_rgba(0,0,0,0.7)] hover:bg-slate-100 transition"
              >
                Download CV (PDF)
              </a>
            </div>

            <p class="text-[11px] text-slate-500">
            </p>
          </div>
        </AnimatedSection>
      </section>
    </main>

    <Footer />
  </div>
</BaseLayout>


